<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Texto do Lembrete -->
    <TextView
        android:id="@+id/reminderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lembrete"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hora do Lembrete -->
    <TextView
        android:id="@+id/reminderTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora do lembrete"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/reminderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Repetição do Lembrete -->
    <TextView
        android:id="@+id/reminderRepeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Repetição"
        android:textSize="14sp"
        android:textColor="#777777"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/reminderTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
